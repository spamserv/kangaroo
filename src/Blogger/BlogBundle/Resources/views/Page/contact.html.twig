{# src/Blogger/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact jvojak</h1>
    </header>

    {% for flash in app.session.flashbag.get('blogger-notice') %}
        <div class="blogger-notice">
            {{ flash }}
        </div>
    {% endfor %}

    <p>Want to contact me?</p>

    <form action="{{ path('BloggerBlogBundle_contact') }}" method="post" class="blogger">
    {{ form_start(form) }}
        {{ form_errors(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}
        {{ form_rest(form) }}
        <input type="submit" value="Submit" />
    {{ form_end(form) }}
    </form>
{% endblock %}