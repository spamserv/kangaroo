<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Slabo+27px" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300" rel="stylesheet">
            <link href="{{ asset('css/base.css') }}" type="text/css" rel="stylesheet" />
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
        {% endblock %}

        {% block scripts %}    
            <script src=" {{ asset('js/jquery-3.1.1.min.js') }}"></script>
            <script src=" {{ asset('js/bootstrap.min.js') }}"></script>
        {% endblock %}
        
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <title>{% block title %}kangaroo{% endblock %} - portal</title>
        
    </head>
    <body>
        <section id="wrapper">
            <header id="header">
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('homepage') }}">Home</a></li>
                                <li><a href="{{ path('about') }}">About</a></li>
                                <li><a href="{{ path('contact') }}">Contact</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>

                <hgroup>
                    <h2>{% block blog_title %}<a href="{{ path('homepage') }}">kangaroo</a>{% endblock %}</h2>
                    <h3>{% block blog_tagline %}<a href="{{ path('homepage') }}">Posting fresh news hourly!</a>{% endblock %}</h3>
                </hgroup>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                    kangaroo portal - copyright by <a href="https://github.com/spamserv">jvojak@etfos.hr</a>
                {% endblock %}
            </div>
        </section>

        {% block javascripts %}{% endblock %}
    </body>
</html>